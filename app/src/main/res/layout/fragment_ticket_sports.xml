<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/id_head_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Details"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/id_text_team1"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team 1"
        app:layout_constraintTop_toBottomOf="@+id/id_head_details"/>

    <TextView
        android:id="@+id/id_input_team1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:hint="team1"
        android:textAppearance="@style/TicketInputStyle"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_text_team1"
        app:layout_constraintStart_toEndOf="@+id/id_text_team1"
        app:layout_constraintTop_toTopOf="@+id/id_text_team1"/>

    <TextView
        android:id="@+id/id_text_team2"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Team 2"
        app:layout_constraintTop_toBottomOf="@+id/id_text_team1"/>

    <TextView
        android:id="@+id/id_input_team2"
        style="@style/TicketInputStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="team2"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_text_team2"
        app:layout_constraintStart_toEndOf="@+id/id_text_team2"
        app:layout_constraintTop_toTopOf="@+id/id_text_team2"/>

</android.support.constraint.ConstraintLayout>